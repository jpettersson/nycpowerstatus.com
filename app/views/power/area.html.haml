- content_for :time_series do
  =raw @time_series_json

- content_for :map_points do
  =raw @map_points_json

- provider = t("providers.#{@area.provider.code}")

%header
  = render 'power/nav'

  %h1= "Does #{@area.area_name} have power?"
  %h2= raw t("area.subtitle", {:pretty_outage_percent => @pretty_outage_percent, :provider => @area.provider.name, :total_customers => @area.samples.last.total_custs, :area => @area.area_name, :link => provider[:twitter]})

.trend
  %h2= "Outage history for #{@area.area_name}:"
  = render 'power/trend'

.current
  - if @area.children.length > 0
    /%h2= "Customers offline per " + provider[:sub_area_descriptors][1] + ":"
  - else
    %h2= "#{@area.area_name}:"

  .map#map_canvas

  .sub-areas
    - if @area.children.length > 0
      = render 'power/sub_areas', :areas => @areas